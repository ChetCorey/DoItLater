<p id="notice"><%= notice %></p>
<% @users.each do |user| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card sticky-action blue-grey darken-1">
        <div class="card-title card-content white-text">
          <strong><%= user.name %>'s</strong>
          Todos: <%= user.todos.count %>
        </div>
        <div class="card-action">
          <a href="#">Calender</a>
          <%= link_to 'List', user_todos_path(user) %>
          <%= link_to 'Edit', edit_user_path(user) %>
        </div>
        <div class="card-reveal">...</div>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col s12 m6">
    <%= link_to 'New User', new_user_path, class: "waves-effect waves-light btn-large" %>
  </div>
</div>